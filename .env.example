# 服务器配置
PORT=3002

# GitHub API配置
GITHUB_TOKEN=your_github_personal_access_token_here

# 缓存配置
CACHE_TTL=300000  # 5分钟缓存时间（毫秒）

# 速率限制配置
RATE_LIMIT_WINDOW=60000  # 1分钟窗口（毫秒）
RATE_LIMIT_MAX_GLOBAL=100  # 全局最大请求数
RATE_LIMIT_MAX_GITHUB=30   # GitHub API最大请求数

# 超时配置
API_TIMEOUT=10000  # API请求超时时间（毫秒）
FETCH_TIMEOUT=8000  # 前端请求超时时间（毫秒）